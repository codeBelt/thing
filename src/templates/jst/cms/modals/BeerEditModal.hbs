<div class="modal">
    <div class="modal-underlay"></div>
    <div class="modal-inner modal-inner_lg js-modal-content">
        <button type="button" class="modal-inner-close js-modal-reject" data-dismiss="modal" aria-hidden="true">&times;</button>
        <form class="dialog" tabindex="-1" role="alertdialog" aria-labelledby="dialog-hd" aria-describedby="dialog-bd" aria-live="assertive" method="get">
            <div class="dialog-hd" id="dialog-hd">
                Edit Beer
            </div>
            <div class="dialog-bd" id="dialog-bd">
                <label class="label">Name</label>
                <input type="text" class="input input_text" name="name" value="{{name}}">
                <label class="label">Company</label>
                <input type="text" class="input input_text" name="company" value="{{company}}">
                <label class="label">ABV</label>
                <input type="text" class="input input_text" name="abv" value="{{abv}}">
                <label class="label">Description</label>
                <textarea class="input input_textarea" name="description">{{description}}</textarea>
                <label class="label">Image Url</label>
                <input type="text" class="input input_text" name="imagePath" value="{{imagePath}}">
            </div>
            <div class="dialog-ft">
                <div class="split split_equally">
                    <button data-dismiss="modal" class="btn btn_secondary mix-btn_block js-modal-reject" type="button">Cancel</button>
                    <button class="btn mix-btn_block js-modal-accept" type="button">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
