<div class="feature">
    {{#each this}}
        <li class="feature-item {{#if isToday}}isActive{{/if}}">
            <h2 class="feature-item-title">{{title}}</h2>
            <div class="feature-item-bd">
                <ul class="vList">
                    {{#each this.calendarItems}}
                        <li>
                            <p><b>{{displayTime}}</b></p>
                            <p>{{summary}}</p>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </li>
    {{/each}}
</div>
